<body>

    <%- include('partials/navbar.ejs') %>
    <%- include('partials/sidebar.ejs') %>
    <div class="slideshow-container">

        <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <img src="/images/amazonOffer.jpeg" style="width:100%;height:32rem">
            <div class="text">Caption Text</div>
        </div>

        <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <img src="/images/amazonOffer.jpeg" style="width:100%;height:32rem">
            <div class="text">Caption Two</div>
        </div>

        <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <img src="/images/amazonOffer.jpeg" style="width:100%;height:32rem">
            <div class="text">Caption Three</div>
        </div>

        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>

    </div>
    <br>

    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>
    <div class="page-content">

        <div id="trending" class="trending">
            <%  var i = 0; %>
            <% for(var deal of deals) { %>
            <% i++; %>
            <div class="card">
                <div class="card__face">

                    <div class="card__picture">
                        <img src="/images/acer-na-gaming-laptop-original-imafj5dpnuuy2dvd.jpeg" alt="Deal Photo"
                            class="deal-photo">
                    </div>

                    <div class="card-text">

                        <h4 class="card__head">
                            Vivo Z1Pro (Sonic Black, 128 GB) (6 GB RAM)
                        </h4>
                        <div class="card__details">
                            <ul>
                                <li class="price"><span class="price_avail"> Rs.3999</span> <strike
                                        class="price_mrp">14999</strike> <span class="price_dis">(70%)</span> </li>
                                <li style="font-weight: 400;"> CouperDeals</li>
                                <li style="font-size: 1.34rem !important;"> 2.6k views <span
                                        style="margin-left: 0.7rem;">3hr ago</span> </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>

            <% if (i === 8){break;}%>
            <% } %>
        </div>

        <div id="hideTrending" class="trending">
            <% var j = 0; %>
            <% for(var deal of deals) { %>
            <% j++; %>

            <% if(j > 8) {%>

            <div class="card">
                <div class="card__face">

                    <div class="card__picture">
                        <img src="/images/acer-na-gaming-laptop-original-imafj5dpnuuy2dvd.jpeg" alt="Deal Photo"
                            class="deal-photo">
                    </div>

                    <div class="card-text">

                        <h4 class="card__head">
                            Vivo Z1Pro (Sonic Black, 128 GB) (6 GB RAM)
                        </h4>
                        <div class="card__details">
                            <ul>
                                <li class="price"><span class="price_avail"> Rs.3999</span> <strike
                                        class="price_mrp">14999</strike> <span class="price_dis">(70%)</span> </li>
                                <li style="font-weight: 400;"> CouperDeals</li>
                                <li style="font-size: 1.34rem !important;"> 2.6k views <span
                                        style="margin-left: 0.7rem;">3hr ago</span> </li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>

            <% } %>
            <% } %>
        </div>

        <div id="showMoreBtn">
            <a href="#trending" class="show-hide-link" id="more" onclick="trendMoreLess()">
                <i class="fas fa-sort-down font_icon" id="down" style="color: red;margin:0 1.2rem 0 1rem;"></i>
                <span class="heading-normal"> Show More</span>
            </a>
        </div>

        <div id="showLessBtn">
            <a href="#trending" class="show-hide-link" id="less" onclick="trendMoreLess()">
                <i class="fas fa-caret-up font_icon" id="up" style="color: red;margin: 0 1.2rem 0 1rem"></i>
                <span class="heading-normal">Show Less</span>
            </a>
        </div>


        <footer class="footer-distributed">

            <div class="footer-left">

                <h3>WebDev<span>Trick</span></h3>

                <p class="footer-links">
                    <a href="#">Home</a>
                    ·
                    <a href="#">Blog</a>
                    ·
                    <a href="#">Pricing</a>
                    ·
                    <a href="#">About</a>
                    ·
                    <a href="#">Faq</a>
                    ·
                    <a href="#">Contact</a>
                </p>

                <p class="footer-company-name">webdevtrick &copy; 2019</p>
            </div>

            <div class="footer-center">

                <div>
                    <i class="fa fa-map-marker"></i>
                    <p><span>21 Revolution Street</span> Delhi, India</p>
                </div>

                <div>
                    <i class="fa fa-phone"></i>
                    <p>+1 555 123456</p>
                </div>

                <div>
                    <i class="fa fa-envelope"></i>
                    <p><a href="mailto:support@company.com">contact@webdevtrick.com</a></p>
                </div>

            </div>

            <div class="footer-right">

                <p class="footer-company-about">
                    <span>About the company</span>
                    Web Dev Trick is a blog for web designers, graphic designers, web developers &amp; SEO Learner.
                </p>

                <div class="footer-icons">

                    <a href="#"><i class="fa fa-facebook"></i></a>
                    <a href="#"><i class="fa fa-twitter"></i></a>
                    <a href="#"><i class="fa fa-linkedin"></i></a>
                    <a href="#"><i class="fa fa-github"></i></a>

                </div>

            </div>

        </footer>
    </div>

    <script>
        var slideIndex = 1;
        showSlides(slideIndex);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            var i;
            var slides = document.getElementsByClassName("mySlides");
            var dots = document.getElementsByClassName("dot");
            if (n > slides.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = slides.length }
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            for (i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            slides[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " active";
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/simplebar@latest/dist/simplebar.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>


    <script type="text/javascript">
        var i = 0;
        function trendMoreLess() {
            if (!i) {
                document.getElementById("hideTrending").style.display = "flex";
                document.getElementById("showLessBtn").style.display = "block";
                document.getElementById("showMoreBtn").style.display = "none";

                i = 1;
            }
            else {
                document.getElementById("hideTrending").style.display = "none";
                document.getElementById("showLessBtn").style.display = "none";
                document.getElementById("showMoreBtn").style.display = "block";
                i = 0;
            }
        }
    </script>


</body>

</html>


