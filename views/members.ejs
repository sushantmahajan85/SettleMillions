    <%- include('partials/navbar.ejs') %> <%- include('partials/sidebar.ejs') %>

    <section class="deal_area">
      <div class="cover">
        <div class="cover_pic"></div>
      </div>
      <div class="profile_area">
        <div class="profile_area_pic"></div>
        <a href="#" id="subscribe_btn" class="profile_area_subs">
          <h6 class="heading-normal">Subscribe</h6>
        </a>
      </div>
      <div class="page-content">
        <div id="trending" class="trending">
          <% for(var deal of deals) { %>

          <div class="big-deal">
            <div class="big-deal_img" data-pause="true" data-interval="1000">
              <div
                class="carousel-item active"
                style="background-color: white !important;"
              >
                <img
                  src="/images/acer-na-gaming-laptop-original-imafj5dpnuuy2dvd.jpeg"
                  alt="Deal Photo"
                  class="big-deal_picture"
                />
              </div>
              <div
                class="carousel-item"
                style="background-color: white !important;"
              >
                <img
                  src="/images/durex-400-play-massage-gel-2-in-1-sensual-stimulating-combo-original-imaey2yuygdhkamq.jpeg"
                  alt="Deal Photo"
                  class="big-deal_picture"
                />
              </div>
              <div
                class="carousel-item"
                style="background-color: white !important;"
              >
                <img
                  src="/images/jeans.jpeg"
                  alt="Deal Photo"
                  class="big-deal_picture"
                />
              </div>
            </div>
            <div class="big-deal_content">
              <div class="big-deal_name">
                <h4><%= deal.dealName %></h4>
              </div>

              <div class="big-deal_buttons">
                <a href="" class="big-deal_user"><%= deal.owner %></a>
              </div>
              <div class="big-deal_vt">
                <p class="big-deal_views"><%= `${deal.views} views` %>  </p>
                <p class="big-deal_time">4 days ago</p>
              </div>

              <div class="big-deal_des">
                <p class="paragraphx">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit.
                  Facilis rem, natus quam corrupti...
                </p>
              </div>
              <div class="big-deal_price">
                <h4
                  class="heading-normal"
                  style="letter-spacing: 0.2rem;font-size: 2rem"
                >
                  Rs. 4366
                </h4>
              </div>
              <div class="big-deal_dis">
                <strike
                  style="font-size: 1.8rem; color:rgb(82, 80, 80);margin-right: 2rem"
                  >Rs.7854</strike
                >

                <h3 class="big-deal_percent">70% OFF</h3>
              </div>
              <form action="/" method="GET" class=reportx>
                <select class="three-dots" name="dealOps" onchange="dealOperations(this)">
                    <option selected disabled value="empty"></option>
                    <option value=<%= `${deal._id}/report` %>>Report</option>
                    <option value=<%= `${deal._id}/like` %>>Like</option>
                    <% if (user) { %>
                      <% if (user.id == deal.user) { %>
                        <option value=<%= `${deal._id}/edit` %>>Edit</option>
                        <option value=<%= `${deal._id}/delete` %>>Delete</option>
                        <% } %>
                    <% } %>
                   
                </select>
                <a href=<%=`/edit/${deal._id}`%> >Edit</a>
            </form>

            </div>
          </div>
          <% } %>
        </div>
      </div>

