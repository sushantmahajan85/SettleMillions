    <script>
      $(".big-deal_img")
        .on("mouseenter", function() {
          $(this).carousel("cycle");
        })
        .on("mouseleave", function() {
          $(this).carousel("pause");
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>

    <script>
      function dealOperations(el){
          el.form.submit();
          window.setTimeout(() => {
                  location.assign('/');
          }, 100);
      }
  </script>
