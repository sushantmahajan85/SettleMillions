<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Affiliate</title>
    <link rel="stylesheet" href="/sass/css/style.css">
    <!-- <link rel="shortcut icon" type="image/png" href="sass/img/Black-and-White-Logo-PNG.png"> -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Amaranth' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css?family=Signika&display=swap" rel="stylesheet">

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-162941654-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-162941654-1');
    </script>

</head>

<body>
    <%- include('partials/navbar.ejs') %>
    <%- include('partials/sidebar.ejs') %>

    <section class="deal_area">
        <% if (xyz.subscribers.length === 0) { %>
        <!-- <h1>bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb
        </h1> -->
        <% } else { %>
        <% for (var i = 0; i < xyz.subscribers.length; i++) { %>
        <h1> <%= xyz.subscribers[i].subscribedUser.name.toUpperCase() %> </h1>
        <div class="deal_area_container">
            <% for (var j = 0; j < subs[i].subscribedDeals.length; j++) { %>
            <a href=<%= `/deal/${subs[i].subscribedDeals[j]._id}/postedBy/${subs[i].subscribedDeals[j].user}` %>>
                <div class="card">
                    <div class="card__face">
                        <div class="card__picture" data-pause="true" data-interval="1000">
                            <div class="carousel-item active">
                                <img src="" alt="Deal Photo" class="deal-photo">
                            </div>
                            <!-- <div class="carousel-item">
                            <img src="" alt="Deal Photo" class="deal-photo">
                        </div> -->
                        </div>
                        <div class="card-text">
                            <div class="card__details">
                                <ul>
                                    <h3 class="product_name_mainp">
                                        Telegram
                                    </h3>
                                    <!-- <h3 class= "product_name_mainp">Product Name</h3> -->
                                    <div>
                                        <a class="aff_name" href="">Couper Deals<i
                                                class=" mp_aff-name-tag fas fa-check-circle"></i>
                                        </a>
                                    </div>
                                    <div class="monetory_values_mp">
                                        <li class="price"><span class="mp_price price_avail">₹1000
                                            </span>
                                            <strike class="mp_p-mrp price_mrp">₹800
                                            </strike>
                                            <!-- <span class="price_dis">(70%)</span> </l> -->
                                        <li style="font-weight: 400;">
                                        </li>
                                    </div>
                                    <div class="views_time_mp">
                                        <div style="display: inline-block">
                                            <span>2000 views</span>
                                            <span>2 days ago</span>
                                        </div>
                                    </div>
                                    <div class="mp_like-rate">
                                        <i class="mp_like_deal far fa-heart"></i>
                                        <span class="mp_like_deal">Like</span>
                                        <div class="mp_share">
                                            <i class="mp_share_deal fas fa-share-square"></i>
                                            <span class="mp_share_deal">Share</span>
                                        </div>
                                    </div>
                                </ul>
                            </div>
                            <% if(user){ %>
                            <form action="/" method="GET" class=reportx>
                                <select class="mp_dealbox_three-dots" id="change" name="dealOps"
                                    onChange="dealOperations(this)" onfocus="this.selectedIndex = -1">
                                    <option selected disabled value="empty"></option>
                                    <option value="">Report</option>
                                    <option value="">Like</option>
                                </select>
                            </form>
                            <% } %>
                            <!-- <div id="three-dots" class="three-dots" onclick="report(this)">&#8230</div> -->

                        </div>
                    </div>
                </div>
            </a>
            <% if (j === 3){break;}%>
            <% } %>
            <% } %>
            <% } %>
        </div>
    </section>

    <div class="footer">
        <div class="footer-content">
            <div class="footer-section about">
                <h2>About</h2>
                <br>
                <ul>
                    <a href="#">
                        <li>About Us</li>
                    </a>
                    <a href="#">
                        <li>Contact Us</li>
                    </a>
                    <a href="#">
                        <li>Careers</li>
                    </a>
                    <a href="#">
                        <li>Our Team</li>
                    </a>

                </ul>
            </div>
            <div class="footer-section social">
                <h2>Social</h2>
                <br>
                <ul>
                    <a href="https://twitter.com/">
                        <li><i class="fab fa-twitter"></i>Twitter</li>
                    </a>
                    <a href="https://www.facebook.com/">
                        <li><i class="fab fa-facebook-f"></i>Facebook</li>
                    </a>
                    <a href="https://twitter.com/">
                        <li><i class="fab fa-instagram"></i>Instagram</li>
                    </a>
                </ul>
            </div>
            <div class="footer-section policy">
                <h2>Policy</h2>
                <br>
                <ul>
                    <a href="#">
                        <li>Terms and Conditions</li>
                    </a>
                    <a href="#">
                        <li>Privacy Policy</li>
                    </a>
                </ul>
            </div>
            <div class="footer-section help">
                <h2>Help</h2>
                <br>
                <ul>
                    <a href="#">
                        <li>How to Post a Deal</li>
                    </a>
                    <a href="#">
                        <li>FAQ</li>
                    </a>
                    <a href="#">
                        <li>Report</li>
                    </a>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <hr>
            </hr>
            &copy; 2020, Your Deal Inc.

        </div>
    </div>


</body>

</html>